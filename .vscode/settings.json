{
  "yaml.schemas": {
    "Kubernetes": ["environment/manifests/**/**.yaml"],
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.8.json": [
      "docker-compose.yaml",
      "docker-compose.yml"
    ]
  },
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,

  // 非表示にするファイル
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "tmp": true,
    "node_modules": true,
    ".pytest_cache": true
  },
  // 検索で表示させないファイル
  "search.exclude": {
    "users": true,
    "tmp": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },

  // Live Share
  "liveshare.allowGuestTaskControl": true,
  "liveshare.allowGuestDebugControl": true,
  // --- mocha の設定 ---
  // Mochaはnode_modules内のパッケージを使う
  "mochaExplorer.mochaPath": "./node_modules/mocha",

  // testsフォルダー下のソースコードを指定する
  "mochaExplorer.files": "tests/**/*.ts",

  // TypeScriptを使うため、ts-nodeを使う
  "mochaExplorer.require": ["ts-node/register"],

  // ワークスペースのフォルダーで実行する
  "mochaExplorer.cwd": "./",

  // ワークスペース内のファイルで絶対参照を使うための設定
  "mochaExplorer.env": {
    "NODE_PATH": "./"
  },

  // コードレンズを有効にする
  "editor.codeLens": true,
  "testExplorer.codeLens": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true
}
