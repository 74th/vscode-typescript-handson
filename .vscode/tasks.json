{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "label": "tsc watch",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "typescript",
      "label": "tsc build",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "morimoto webpack build",
      "command": ["${workspaceFolder}/node_modules/.bin/webpack"],
      "args": [
        "./src/frontend/morimoto_index.ts",
        "--output",
        "./public/html/js/morimoto_index.js"
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "webpack build (watch)",
      "command": ["${workspaceFolder}/node_modules/.bin/webpack"],
      "args": [
        "-w",
        "./src/frontend/morimoto_index.ts",
        "--output",
        "./public/html/js/morimoto_index.js"
      ],
      "type": "shell",
      "problemMatcher": ["$tsc"],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build"
    }
  ]
}
